<div class="container">
  <% if current_user %>
    <h1 class="text-center">Welcome to your Medical Inventory</h1>
    <!--PRODUCTS OVERDUES-->
    <div class="container">
      <h2 class="text-center">Overdue stocks</h2>
      <article class="row laboratory">
        <table class="table table-bordered table-responsive">
          <tbody>
            <% @overdue_stocks.each do |os| %>
              <tr>
                <td class="col-md-1 product-img"><img src="<%= os.product.avatar %>" width="120" alt="product"></td>
                <td><%= os.product.name %></td>
                <td><%= os.user.email %></td>
                <td><%= os.quantity %></td>
                <td><%= os.due_date %></td>
                <td><a href="<%= stock_path(os.id)%>" class="btn btn-info"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a></td>
              </tr>
            <% end if @overdue_stocks.any?%>
          </tbody>
        </table>
        <a class="btn btn-default" href="<%= stocks_path %>">View all stocks</a>
        <a class="btn btn-default" href="<%= new_stock_path %>">New Stock</a>
      </article>
    </div>
  <% else %>
    <h1 class="text-center">Please Log In</h1>
  <% end %>
</div>
