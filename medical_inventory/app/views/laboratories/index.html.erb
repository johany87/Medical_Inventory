<div class="container">
  <h1 class="text-center"> Laboratories </h1>
  <% if current_user %>
  <article>
    <table class="table table-bordered table-responsive">
      <tbody>
        <% @laboratories.each do |l| %>
          <tr>
            <td class="col-sm-1"><strong><%= l.name %></strong></td>
            <td class="col-sm-1"><a href="<%= laboratory_path(l.id) %>" data-method="delete" class="btn btn-danger"> <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> </a></td>
            <td class="col-sm-1"> <a href="<%= edit_laboratory_path(l.id)%>" class="btn btn-success"> <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> </a> </td>
            <td class="col-sm-1"> <a href="<%= laboratory_path(l.id)%>" class="btn btn-info"> <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a> </td>
          </tr>
        <% end if @laboratories.any?%>
      </tbody>
    </table>
      <a class="btn btn-default active" href="<%= new_laboratory_path %>">New Laboratory</a>
  </article>
  <% end %>
</div>
