</div>

<!--SHOW PRODUCTS BY PRICE-->
<div class="container col-md-4">
  <div class="container">
    <h4>Filter by price</h4>
    <div class="row">
      <%= form_tag filters_path, method: :get do %>
      <select name="price" class="selectpicker">
        <%= @products.each do |p| %>
        <option value="<%= p.price %>"> <%= p.price %> </option>
        <% end  %>
      </select>
      <button type="submit" class="btn">Search</button>
      <% end %>
    </div>
    <!--SHOW PRODUCTS BY PRICE-->
    <% @products_by_price.each do |p| %>
    <div class="row">
      <div class="col-md-1">
        <p><%= p.name %></p>
      </div>
      <div class="col-md-1">
        <p><%= money p.price %></p>
      </div>
    </div>
    <% end if @products_by_price%>
  </div>
</div>
