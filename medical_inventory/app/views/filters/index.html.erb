<!--FILTER BY LAB-->
<div class="container col-md-4">
  <div class="container">
    <h4>Filter by laboratory</h4>
    <div class="row">
      <%= form_tag filters_path, method: :get do %>
      <select name="laboratory_id" class="selectpicker">
        <%= @laboratories.each do |l| %>
        <option value="<%= l.id %>"> <%= l.name %> </option>
        <% end  %>
      </select>
      <button type="submit" class="btn">Search</button>
      <% end %>
    </div>
    <!--SHOW PRODUCTS BY LAB-->
    <% @products_by_lab.each do |p| %>
    <div class="row">
      <div class="col-md-2">
        <p><%= p.name %></p>
      </div>
      <div class="col-md-2">
        <p><%= p.laboratory.name %></p>
      </div>
    </div>
    <% end if @products_by_lab and @products_by_lab.any? %>
  </div>
</div>

<!--FILTER BY USER-->
<div class="container col-md-4">
  <div class="container">
    <h4>Filter by user</h4>
    <div class="row">
      <%= form_tag filters_path, method: :get do %>
      <select name="user_id" class="selectpicker">
