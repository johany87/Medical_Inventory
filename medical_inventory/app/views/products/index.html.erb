<div class="container">
  <% if current_user %>
    <h1 class="text-center"> Products </h1>
      <% if session[:new_product] %>
      <article data-new-product data-new-product-id="<%= session[:new_product] %>">
      <% else %>
      <article>
      <% end %>
          <table class="table table-bordered table-responsive">
            <tbody>
              <% @products.each do |pr| %>
              <tr>
                <td><%= pr.name %></td>
                <td><%= pr.laboratory.name %></td>
                <td><%= pr.price %></td>
                <td><a href="<%= product_path(pr.id)%>" class="btn btn-info"> <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> </a></td>
                <td><a href="<%= edit_product_path(pr.id)%>" class="btn btn-success"> <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> </a></td>
                <td><a href="<%= product_path(pr.id) %>" data-method="delete" class="btn btn-danger"> <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> </a></td>
              </tr>
              <% end if @products.any?%>
            </tbody>
          </table>
          <a class="btn btn-default active" href="<%= new_product_path %>"> New Product </a>
    </article>
  <% end %>
</div>
